{
  "name": "grant-shield",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["server", "client"],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "seed": "npm run seed --workspace=server",
    "test": "npm run test --workspace=server && npm run test --workspace=client",
    "db:migrate": "npx prisma migrate dev --schema=prisma/schema.prisma",
    "db:push": "npx prisma db push --schema=prisma/schema.prisma",
    "db:generate": "npx prisma generate --schema=prisma/schema.prisma"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prisma": "^5.10.0"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0"
  }
}
